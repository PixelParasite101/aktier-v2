{
  // VS Code launch configurations for running fetch_history_pro
  // Use the Python extension's "Run" and "Debug" with these presets.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Fetch: Validate-only (preset=standard)",
      "type": "python",
      "request": "launch",
      "module": "src.fetch_history_pro",
      "args": ["--preset", "standard", "--validate-only"],
      "cwd": "${workspaceFolder}",
      "env": {"PYTHONPATH": "${workspaceFolder}"},
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Fetch: Dry-run (in-RAM, no writes)",
      "type": "python",
      "request": "launch",
      "module": "src.fetch_history_pro",
      "args": ["--preset", "standard", "--dry-run", "--batch-size", "5"],
      "cwd": "${workspaceFolder}",
      "env": {"PYTHONPATH": "${workspaceFolder}"},
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Fetch: Full run (preset=standard)",
      "type": "python",
      "request": "launch",
      "module": "src.fetch_history_pro",
      "args": ["--preset", "standard"],
      "cwd": "${workspaceFolder}",
      "env": {"PYTHONPATH": "${workspaceFolder}"},
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
