{
  // VS Code Run/Debug configurations
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run fetch (preset standard)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/fetch_history_pro.py",
      "args": ["--preset", "standard"],
      "console": "integratedTerminal"
    },
    {
      "name": "Run features (preset standard)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/compute_features.py",
      "args": ["--preset", "standard"],
      "console": "integratedTerminal"
    },
    {
      "name": "Run rebased (preset standard)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/make_rebased_windows.py",
      "args": ["--preset", "standard"],
      "console": "integratedTerminal"
    }
    ,
    {
      "name": "Run analog matcher (watch)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/analog_matcher_watch.py",
      "args": [
        "--watch", "${workspaceFolder}/watch.csv",
        "--ref-dir", "${workspaceFolder}/rebased",
        "--lookback", "75",
        "--horizon", "25",
        "--topn", "10",
        "--metric", "mse",
        "--match-cols", "AdjClose_Rebased,MA_20_Rebased,MA_50_Rebased,MA_200_Rebased",
  "--out-dir", "${workspaceFolder}/analog_out",
  "--verbose"
      ],
      "console": "integratedTerminal"
    }
  ]
}
